---
import { Image } from "astro:assets";
import consultoria1 from "../assets/consultoria1.webp";
import consultoria2 from "../assets/consultoria2.webp";
import consultoria3 from "../assets/consultoria3.webp";
import consultoria4 from "../assets/consultoria4.webp";
import consultoria5 from "../assets/consultoria5.webp";
import consultoria6 from "../assets/consultoria6.webp";
import consultoria7 from "../assets/consultoria7.webp";
import consultoria8 from "../assets/consultoria8.webp";
import consultoria9 from "../assets/consultoria9.webp";
const tags = [
    {
        text: "Planeamiento y evaluación de métodos de ejecución de Obras Civiles.",
        img: consultoria1,
    },
    { text: "Diseño y Evaluación de Planos de vivienda.", img: consultoria2 },
    {
        text: "Diseño y optimización de proyectos de construcción.",
        img: consultoria3,
    },
    {
        text: "Diseño de voladura controlada en zonas críticas, de contorno y/o precorte.",
        img: consultoria4,
    },
    {
        text: "Diseño de voladura no convencional en obras Civiles, demoliciones.",
        img: consultoria5,
    },
    {
        text: "Evaluación de impactos medioambientales de proyectos Civiles.",
        img: consultoria6,
    },
    {
        text: "Evaluación de Rendimiento de maquinaria pesada.",
        img: consultoria7,
    },
    {
        text: "Capacitación, entrenamiento, conferencias y seminarios.",
        img: consultoria8,
    },
    { text: "Cotización de Obras Civiles.", img: consultoria9 },
];
---

<section class="carrusel">
    <div class="carrusel__container">
        <div class="carrusel__header">
            <h2 class="carrusel__title">Consultoría Especializada</h2>
            <p class="carrusel__subtitle">Soluciones integrales para tus proyectos de construcción</p>
        </div>
        <div class="carrusel__track">
            <div class="carrusel__content">
                {
                    [...tags, ...tags].map((tag, index) => (
                        <div class="carrusel__card">
                            <div class="carrusel__image-wrapper">
                                <Image src={tag.img} alt={tag.text} class="carrusel__image" />
                                <div class="carrusel__overlay"></div>
                            </div>
                            <div class="carrusel__text">
                                <p>{tag.text}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
        <div class="carrusel__fade-left"></div>
        <div class="carrusel__fade-right"></div>
    </div>
</section>
<style>
    /* Variables CSS coherentes con el resto del proyecto */
    :root {
        --primary-blue: #293e49;
        --medium-blue: #0a71ac;
        --accent-blue: #20a6ff;
        --dark-blue: #083d63;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --bg-light: #f8f9fa;
        --white: #ffffff;
        --font-primary: "Poppins", sans-serif;
        --font-secondary: "Noto Sans", sans-serif;
        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .carrusel {
        width: 100%;
        padding: 1rem 0;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--dark-blue) 100%);
        position: relative;
        overflow: hidden;
        box-sizing: border-box;
    }

    .carrusel__container {
        max-width: 1400px;
        margin: 0 auto;
        position: relative;
        box-sizing: border-box;
    }

    .carrusel__header {
        text-align: center;
        margin-bottom: 3rem;
        animation: fadeInUp 0.8s ease-out;
    }

    .carrusel__title {
        font-family: var(--font-primary);
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 700;
        color: var(--white);
        margin: 0 0 1rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .carrusel__subtitle {
        font-family: var(--font-secondary);
        font-size: clamp(1rem, 2vw, 1.2rem);
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.5;
    }

    .carrusel__track {
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 300px;
        display: flex;
        align-items: center;
    }

    .carrusel__content {
        display: flex;
        gap: 2rem;
        animation: infiniteScroll 40s linear infinite;
        will-change: transform;
    }

    .carrusel__card {
        flex: 0 0 280px;
        height: 200px;
        background: var(--white);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: var(--shadow-medium);
        transition: var(--transition);
        position: relative;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    .carrusel__card:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .carrusel__image-wrapper {
        position: relative;
        height: 120px;
        overflow: hidden;
    }

    .carrusel__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .carrusel__card:hover .carrusel__image {
        transform: scale(1.1);
    }

    .carrusel__overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(41, 62, 73, 0.1) 0%,
            rgba(10, 113, 172, 0.3) 100%
        );
        opacity: 0;
        transition: var(--transition);
    }

    .carrusel__card:hover .carrusel__overlay {
        opacity: 1;
    }

    .carrusel__text {
        padding: 1rem;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        box-sizing: border-box;
    }

    .carrusel__text p {
        font-family: var(--font-secondary);
        font-size: 0.9rem;
        color: var(--text-dark);
        margin: 0;
        line-height: 1.4;
        font-weight: 500;
    }

    /* Gradientes de fade lateral */
    .carrusel__fade-left,
    .carrusel__fade-right {
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100px;
        pointer-events: none;
        z-index: 2;
    }

    .carrusel__fade-left {
        left: 0;
        background: linear-gradient(
            90deg,
            var(--primary-blue) 0%,
            transparent 100%
        );
    }

    .carrusel__fade-right {
        right: 0;
        background: linear-gradient(
            270deg,
            var(--dark-blue) 0%,
            transparent 100%
        );
    }

    /* Animación infinita continua */
    @keyframes infiniteScroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(calc(-280px * 9 - 2rem * 9));
        }
    }

    /* Animación de entrada */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Pausa la animación al hacer hover sobre el carrusel */
    .carrusel__track:hover .carrusel__content {
        animation-play-state: paused;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .carrusel {
            padding: 3rem 0;
        }

        .carrusel__container {
            padding: 0 1rem;
        }

        .carrusel__track {
            height: 250px;
        }

        .carrusel__card {
            flex: 0 0 240px;
            height: 180px;
        }

        .carrusel__image-wrapper {
            height: 100px;
        }

        .carrusel__text {
            padding: 0.8rem;
        }

        .carrusel__text p {
            font-size: 0.8rem;
        }

        .carrusel__fade-left,
        .carrusel__fade-right {
            width: 50px;
        }

        @keyframes infiniteScroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(calc(-240px * 9 - 2rem * 9));
            }
        }
    }

    @media (max-width: 480px) {
        .carrusel {
            padding: 2rem 0;
        }

        .carrusel__header {
            margin-bottom: 2rem;
        }

        .carrusel__track {
            height: 200px;
        }

        .carrusel__card {
            flex: 0 0 200px;
            height: 160px;
        }

        .carrusel__image-wrapper {
            height: 80px;
        }

        .carrusel__text {
            padding: 0.7rem;
        }

        .carrusel__text p {
            font-size: 0.75rem;
        }

        @keyframes infiniteScroll {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(calc(-200px * 9 - 2rem * 9));
            }
        }
    }
</style>
