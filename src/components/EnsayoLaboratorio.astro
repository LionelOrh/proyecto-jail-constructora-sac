---
import { Image } from "astro:assets";
import ensayoslaboratorio from "../assets/ensayoslaboratorio.webp";
---

<section class="servicio-ensayo-laboratorio">
    <article class="servicio-container">
        <div>
            <h2>Ensayos de Laboratorio</h2>
            <ul class="servicio-detalles">
                <li>Ensayos Especiales (ASTM)</li>
                <li>Ensayos de Agregados (ASTM/MTC/NTP)</li>
                <li>Ensayos de Suelos (ASTM/MTC)</li>
                <li>Ensayos de Campo en Suelos</li>
                <li>Ensayos de Concreto Fresco y Endurecido (ASTM/MTC)</li>
                <li>Ensayos Qu√≠micos (ASTM/MTC/NTP)</li>
            </ul>
        </div>
        <div class="servicio-img">
            <Image
                src={ensayoslaboratorio}
                alt="Electricista"
                class="servicio-image"
                width={1000}
                height={500}
            />
        </div>
    </article>
</section>
<style>
    .servicio-ensayo-laboratorio {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 30px 60px;
        gap: 30px;
    }
    .servicio-image {
        width: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .servicio-detalles{
        font-size: 1.8rem;
    }
</style>
