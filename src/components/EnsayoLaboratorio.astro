<style>
    /* Variables locales coherentes */
    :root {
        --primary-blue: #293e49;
        --medium-blue: #0a71ac;
        --accent-blue: #20a6ff;
        --dark-blue: #083d63;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --bg-light: #f8f9fa;
        --white: #ffffff;
        --font-primary: "Poppins", sans-serif;
        --font-secondary: "Noto Sans", sans-serif;
        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .laboratorio {
        width: 100%;
        height: 100%;
        padding: 2.5rem;
        background: var(--white);
        border-radius: 0;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    .laboratorio__container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        height: 100%;
        flex: 1;
        max-width: 100%;
        margin: 0 auto;
        box-sizing: border-box;
    }

    .laboratorio__content {
        padding: 0 1rem;
        order: 2;
        flex: 1;
        box-sizing: border-box;
    }

    .laboratorio__image-wrapper {
        position: relative;
        height: 200px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: var(--shadow-soft);
        transition: var(--transition);
        order: 1;
        flex-shrink: 0;
        margin: 0 1rem;
    }

    .laboratorio__image-wrapper:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow-medium);
    }

    .laboratorio__image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(41, 62, 73, 0.3) 0%,
            rgba(10, 113, 172, 0.2) 100%
        );
        z-index: 1;
        opacity: 0;
        transition: var(--transition);
    }

    .laboratorio__image-wrapper:hover .laboratorio__image-overlay {
        opacity: 1;
    }

    .laboratorio__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .laboratorio__header {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .laboratorio__badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
        color: var(--white);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-family: var(--font-primary);
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
        box-shadow: var(--shadow-soft);
    }

    .laboratorio__title {
        font-family: var(--font-primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 700;
        color: var(--primary-blue);
        margin: 0 0 1rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .laboratorio__title-accent {
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
        border-radius: 2px;
        margin: 0 auto 1rem;
    }

    .laboratorio__services {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.7rem;
        flex: 1;
    }

    .laboratorio__service-item {
        display: flex;
        align-items: center;
        gap: 0.7rem;
        padding: 0.7rem;
        background: var(--bg-light);
        border-radius: 10px;
        font-family: var(--font-secondary);
        font-size: 0.8rem;
        color: var(--text-dark);
        transition: var(--transition);
        border-left: 3px solid transparent;
        box-sizing: border-box;
    }

    .laboratorio__service-item:hover {
        background: var(--white);
        border-left-color: var(--primary-blue);
        transform: translateX(5px);
        box-shadow: var(--shadow-soft);
    }

    .laboratorio__service-icon {
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 28px;
        height: 28px;
        background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-blue) 100%);
        border-radius: 6px;
        flex-shrink: 0;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .laboratorio {
            padding: 2rem;
        }

        .laboratorio__container {
            gap: 1.5rem;
        }

        .laboratorio__content {
            padding: 0 0.5rem;
        }

        .laboratorio__image-wrapper {
            height: 180px;
            margin: 0 0.5rem;
        }

        .laboratorio__services {
            grid-template-columns: 1fr;
            gap: 0.6rem;
        }

        .laboratorio__service-item {
            padding: 0.6rem;
        }
    }

    @media (max-width: 480px) {
        .laboratorio {
            padding: 1.5rem;
        }

        .laboratorio__content {
            padding: 0;
        }

        .laboratorio__image-wrapper {
            height: 160px;
            margin: 0;
        }

        .laboratorio__service-item {
            font-size: 0.8rem;
        }

        .laboratorio__service-icon {
            width: 28px;
            height: 28px;
            font-size: 1rem;
        }
    }
</style>
