<style>
    /* Variables CSS para el footer */
    :root {
        --footer-primary: #000000;
        --footer-secondary: #1a1a1a;
        --footer-accent-blue: #0096D5;
        --footer-dark-blue: #0076BE;
        --footer-white: #ffffff;
        --footer-light-gray: #f8f9fa;
        --footer-medium-gray: #6c757d;
        --footer-gradient: linear-gradient(135deg, var(--footer-primary) 0%, var(--footer-secondary) 100%);
        --footer-gradient-blue: linear-gradient(135deg, var(--footer-dark-blue) 0%, var(--footer-accent-blue) 100%);
        --footer-gradient-hover: linear-gradient(135deg, var(--footer-accent-blue) 0%, var(--footer-dark-blue) 100%);
        --font-primary: "Poppins", sans-serif;
        --font-secondary: "Noto Sans", sans-serif;
        --shadow-soft: 0 4px 20px rgba(0, 150, 213, 0.15);
        --shadow-medium: 0 8px 30px rgba(0, 150, 213, 0.2);
        --shadow-strong: 0 15px 50px rgba(0, 150, 213, 0.25);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        --border-radius: 15px;
    }

    /* Footer Principal */
    .footer {
        background: var(--footer-gradient);
        color: var(--footer-white);
        position: relative;
        overflow: hidden;
        box-sizing: border-box;
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: -50%;
        width: 200%;
        height: 3px;
        background: linear-gradient(90deg, 
            transparent 0%, 
            var(--footer-accent-blue) 50%, 
            transparent 100%
        );
        animation: shimmer 3s ease-in-out infinite;
    }

    .footer__main {
        position: relative;
        z-index: 1;
        box-sizing: border-box;
    }

    .footer__container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 4rem 2rem 2rem;
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 3rem;
        box-sizing: border-box;
    }

    /* Secci√≥n de la Empresa */
    .footer__company {
        animation: slideInLeft 0.8s ease-out;
    }

    .footer__logo-section {
        margin-bottom: 2rem;
    }

    .footer__logo-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: inherit;
        transition: var(--transition);
    }

    .footer__logo-link:hover {
        transform: translateY(-2px);
    }

    .footer__logo-wrapper {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .footer__logo {
        width: 50px;
        height: 50px;
        object-fit: contain;
        transition: var(--transition);
        z-index: 2;
        position: relative;
    }

    .footer__logo-glow {
        position: absolute;
        inset: -5px;
        background: radial-gradient(circle, rgba(0, 150, 213, 0.4) 0%, transparent 70%);
        border-radius: 50%;
        opacity: 0;
        transition: var(--transition);
        animation: pulse 2s ease-in-out infinite;
    }

    .footer__logo-wrapper:hover .footer__logo-glow {
        opacity: 1;
    }

    .footer__company-name {
        font-family: var(--font-primary);
        font-size: clamp(1.2rem, 2vw, 1.5rem);
        font-weight: 700;
        margin: 0;
        letter-spacing: -0.02em;
        background: var(--footer-gradient-blue);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .footer__description {
        font-family: var(--font-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        margin: 0 0 2rem;
        opacity: 0.9;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    /* Informaci√≥n de Contacto */
    .footer__contact {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .footer__contact-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        text-decoration: none;
        color: inherit;
        transition: var(--transition);
        padding: 0.8rem;
        border-radius: var(--border-radius);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
    }

    .footer__contact-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
        box-shadow: var(--shadow-soft);
    }

    .footer__contact-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: var(--footer-gradient-blue);
        color: var(--footer-white);
        border-radius: 50%;
        font-size: 1.2rem;
        transition: var(--transition);
        box-shadow: var(--shadow-soft);
    }

    .footer__contact-item:hover .footer__contact-icon {
        transform: scale(1.1) rotate(5deg);
        background: var(--footer-gradient-hover);
    }

    .footer__emails {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer__email-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.8rem;
        border-radius: var(--border-radius);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        transition: var(--transition);
    }

    .footer__email-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    .footer__email-text {
        font-size: 0.9rem;
        flex: 1;
    }

    .footer__copy-btn {
        opacity: 0.7;
        transition: var(--transition);
        cursor: pointer;
    }

    .footer__copy-btn:hover {
        opacity: 1;
        transform: scale(1.1);
    }

    .footer__address {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 0.8rem;
        border-radius: var(--border-radius);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        transition: var(--transition);
    }

    .footer__address:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    /* Secciones Generales */
    .footer__section {
        animation: slideInUp 0.8s ease-out;
    }

    .footer__section:nth-child(2) { animation-delay: 0.1s; }
    .footer__section:nth-child(3) { animation-delay: 0.2s; }
    .footer__section:nth-child(4) { animation-delay: 0.3s; }

    .footer__section-title {
        font-family: var(--font-primary);
        font-size: 1.3rem;
        font-weight: 700;
        margin: 0 0 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--footer-white);
        position: relative;
    }

    .footer__section-title::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--footer-gradient-blue);
        transition: var(--transition);
    }

    .footer__section:hover .footer__section-title::after {
        width: 100%;
    }

    .footer__title-icon {
        font-size: 1.2rem;
        animation: bounce 2s ease-in-out infinite;
    }

    /* Listas */
    .footer__list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .footer__list-item {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        font-family: var(--font-secondary);
        font-size: 0.9rem;
        line-height: 1.5;
        transition: var(--transition);
        padding: 0.5rem 0.8rem;
        border-radius: 8px;
        cursor: pointer;
    }

    .footer__list-item:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateX(8px);
        padding-left: 1.2rem;
    }

    .footer__bullet {
        font-size: 1rem;
        transition: var(--transition);
    }

    .footer__list-item:hover .footer__bullet {
        transform: scale(1.2) rotate(10deg);
    }

    /* Enlaces de Navegaci√≥n */
    .footer__nav-link {
        color: inherit;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        transition: var(--transition);
        width: 100%;
    }

    .footer__nav-link:hover {
        color: var(--footer-accent-blue);
    }

    /* Redes Sociales */
    .footer__social {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .footer__social-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: inherit;
        text-decoration: none;
        padding: 1rem;
        border-radius: var(--border-radius);
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        transition: var(--transition);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .footer__social-link:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-3px) scale(1.05);
        box-shadow: var(--shadow-medium);
    }

    .footer__social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: var(--footer-gradient-blue);
        color: var(--footer-white);
        border-radius: 50%;
        font-size: 1.3rem;
        transition: var(--transition);
    }

    .footer__social-link:hover .footer__social-icon {
        background: var(--footer-gradient-hover);
        transform: rotate(360deg) scale(1.1);
    }

    /* Copyright */
    .footer__copyright {
        background: var(--footer-secondary);
        position: relative;
        overflow: hidden;
        border-top: 2px solid var(--footer-accent-blue);
    }

    .footer__copyright-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 1.5rem 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        font-family: var(--font-secondary);
        font-size: 0.9rem;
        color: var(--footer-white);
        position: relative;
        z-index: 2;
    }

    .footer__copyright-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        background: var(--footer-gradient-blue);
        color: var(--footer-white);
        border-radius: 50%;
        font-size: 0.8rem;
        animation: rotate 3s linear infinite;
    }

    .footer__copyright-decoration {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: var(--footer-gradient-blue);
        animation: expandWidth 2s ease-in-out infinite;
    }

    /* Animaciones */
    @keyframes shimmer {
        0%, 100% { transform: translateX(-100%); }
        50% { transform: translateX(100%); }
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.7; }
        50% { transform: scale(1.05); opacity: 1; }
    }

    @keyframes bounce {
        0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
        40% { transform: translateY(-5px); }
        60% { transform: translateY(-3px); }
    }

    @keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-30px); }
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    @keyframes expandWidth {
        0%, 100% { width: 0; left: 50%; }
        50% { width: 100%; left: 0; }
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
        .footer__container {
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }
        
        .footer__company {
            grid-column: span 2;
        }
    }

    @media (max-width: 768px) {
        .footer__container {
            grid-template-columns: 1fr;
            padding: 3rem 1.5rem 2rem;
            gap: 2rem;
        }
        
        .footer__company {
            grid-column: span 1;
        }
        
        .footer__logo-link {
            flex-direction: column;
            text-align: center;
            gap: 0.5rem;
        }
        
        .footer__contact-item,
        .footer__email-item,
        .footer__address {
            flex-direction: column;
            text-align: center;
            gap: 0.8rem;
        }
        
        .footer__social {
            flex-direction: row;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .footer__container {
            padding: 2rem 1rem 1.5rem;
            gap: 1.5rem;
        }
        
        .footer__copyright-content {
            padding: 1rem;
            flex-direction: column;
            gap: 0.5rem;
            text-align: center;
        }
        
        .footer__social {
            flex-direction: column;
        }
    }
</style>
