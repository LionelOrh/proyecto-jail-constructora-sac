---
import { Image } from "astro:assets";
import logo from "../assets/logo.webp";
import barra from "../assets/barra-abajo.webp";

---

<header class="header">
    <div class="logo-container">
        <a href="/">
            <Image src={logo} alt="" class="logo"/>
        </a>
        <h1 class="name">JAIL CONSTRUCTORA S.A.C</h1>
        <div class="barra">
            <Image src={barra} alt="" class="barra"/>
        </div>
    </div>

    <nav class="nav">
        <ul>
            <li><a href="/nosotros">Nosotros</a></li>
            <li><a href="/servicios">Servicios</a></li>
            <li><a href="/proyectos">Proyectos</a></li>
            <li><a href="/contacto">Contacto</a></li>
        </ul>
    </nav>
</header>
<style>
    .header {
        top: 0;
        left: 0;
        position: fixed;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        padding: 20px 60px;
        background-size: cover;
        z-index: 1000;
        width: 100%;
        height: 120px;
        box-sizing: border-box;
        background: linear-gradient(to bottom, rgba(0,0,0,0.8),rgba(0,0,0,0));
    }
    .logo-container {
        display: grid;
        grid-template-columns: 60px 400px;
        grid-template-rows: 60px 30px;    
    }
    .name {
    display: flex;
    align-items: end;
    }
    .barra{
        grid-column: span 2/ span 2;
        width: 100%;
        height: 20px;
    }
    .logo-container .logo {
        width: 60px;
        height: 60px;
    }
    .logo-container h1 {
        font-family: 'Alfa Slab One', serif;
        font-size: 24px;
        color: #F0F8FF;
        margin: 0;
    }
    .nav {
        display: flex;
        justify-content: end;
        align-items: center;
    }
    .nav ul {
        display: flex;
        list-style: none;
        gap: 20px;
        margin: 0;
    }
    .nav ul li a {
        text-decoration: none;
        color: #F0F8FF;
        font-size: 20px;
        font-weight: bold;
    }
</style>
