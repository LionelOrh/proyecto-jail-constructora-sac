<section class="hero">
    <div class="hero__container">
        <div class="hero__content">
            <h1 class="hero__title">
                Construimos <span class="hero__title-highlight">Soluciones</span> que Transforman Comunidades
            </h1>
            <p class="hero__description">
                Especialistas en sistemas de agua potable, viviendas y obras civiles con responsabilidad social. 
                Impulsando el desarrollo del Perú con infraestructura de calidad.
            </p>
            <div class="hero__actions">
                <a href="#contacto" class="hero__btn hero__btn--primary">Contáctanos</a>
                <a href="/nosotros" class="hero__btn hero__btn--secondary">Conócenos</a>
            </div>
        </div>
        <div class="hero__visual">
            <div class="hero__gradient"></div>
        </div>
    </div>
</section>
<style>
    * {
        box-sizing: border-box;
    }

    .hero {
        min-height: 100vh;
        width: 100%;
        position: relative;
        background: linear-gradient(135deg, rgba(11, 82, 129, 0.405), rgba(8, 61, 99, 0.9)), 
                    url("../assets/banner.webp");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        display: flex;
        align-items: center;
        padding-top: 80px; /* Espacio para el header fijo */
    }

    .hero__container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        min-height: calc(100vh - 80px);
    }

    .hero__content {
        z-index: 2;
        max-width: 600px;
    }

    .hero__title {
        font-family: "Poppins", sans-serif;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 700;
        line-height: 1.2;
        color: #ffffff;
        margin-bottom: 1.5rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
    }

    .hero__title-highlight {
        color: #20a6ff;
        position: relative;
    }

    .hero__title-highlight::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #20a6ff, transparent);
        border-radius: 2px;
    }

    .hero__description {
        font-family: "Poppins", sans-serif;
        font-size: 1.125rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2.5rem;
        font-weight: 400;
        max-width: 500px;
    }

    .hero__actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .hero__btn {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        border-radius: 50px;
        font-family: "Poppins", sans-serif;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
        min-width: 160px;
        justify-content: center;
        text-align: center;
    }

    .hero__btn--primary {
        background: linear-gradient(135deg, #20a6ff, #0a71ac);
        color: white;
        box-shadow: 0 4px 20px rgba(32, 166, 255, 0.3);
    }

    .hero__btn--primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 30px rgba(32, 166, 255, 0.4);
        background: linear-gradient(135deg, #0a71ac, #20a6ff);
    }

    .hero__btn--secondary {
        background: transparent;
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.7);
    }

    .hero__btn--secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: white;
        transform: translateY(-3px);
    }

    .hero__visual {
        position: relative;
        height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero__gradient {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, rgba(32, 166, 255, 0.3), rgba(11, 81, 129, 0.4));
        border-radius: 50%;
        filter: blur(40px);
        animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0px) scale(1);
        }
        50% {
            transform: translateY(-20px) scale(1.05);
        }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .hero {
            background-attachment: scroll;
        }

        .hero__container {
            grid-template-columns: 1fr;
            gap: 2rem;
            text-align: center;
            padding: 0 1rem;
        }

        .hero__content {
            max-width: 100%;
        }

        .hero__title {
            font-size: clamp(2rem, 8vw, 3rem);
            margin-bottom: 1rem;
        }

        .hero__description {
            font-size: 1rem;
            margin-bottom: 2rem;
            max-width: 100%;
        }

        .hero__actions {
            justify-content: center;
            flex-direction: column;
            align-items: center;
        }

        .hero__btn {
            width: 100%;
            max-width: 280px;
        }

        .hero__visual {
            height: 200px;
            order: -1;
        }

        .hero__gradient {
            width: 200px;
            height: 200px;
        }
    }

    @media (max-width: 480px) {
        .hero__container {
            padding: 0 1rem;
        }

        .hero__title {
            font-size: 2rem;
        }

        .hero__description {
            font-size: 0.95rem;
        }

        .hero__btn {
            padding: 0.875rem 1.5rem;
            font-size: 0.95rem;
        }
    }
</style>
