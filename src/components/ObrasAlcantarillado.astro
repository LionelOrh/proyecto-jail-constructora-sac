---
import { Image } from "astro:assets";
import obraalcantarillado from "../assets/obraalcantarillado.webp";
---

<section class="servicio-obras-agua-alcantarillado">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={obraalcantarillado}
                alt="Electricista"
                class="servicio-image"
                width={1000}
                height={500}
            />
        </div>
        <div>
            <h2>Obras de agua potable y alcantarillado</h2>
            <ul class="servicio-detalles">
                <li>Levantamiento topográfico </li>
                <li>Seguridad Ocupacional  </li>
                <li>Área Ambiental  </li>
                <li>Mecánica de Suelos</li>
                <li>Enfermería</li>
                <li>Ingeniero Civil</li>
                <li>Planta de Tratamiento de Aguas Residuales</li>
                <li>Planta de Tratamiento de Agua Potable</li>
            </ul>
        </div>
    </article>
</section>
<style>
    .servicio-obras-alcantarillado {
        width: 100%;
        height: 100%;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 30px 60px;
        gap: 30px;
    }
    .servicio-image {
        width: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .servicio-detalles{
        font-size: 1.8rem;
    }
</style>
