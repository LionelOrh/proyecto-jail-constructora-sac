---
import { Image } from "astro:assets";
import obraalcantarillado from "../assets/obraalcantarillado.webp";
---

<section class="servicio-obras-agua-alcantarillado">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={obraalcantarillado}
                alt="Obras de agua potable y alcantarillado"
                class="servicio-image"
                width={1000}
                height={400}
            />
        </div>
        <div class="servicio-detalles">
            <h2 class="servicio-title">OBRAS DE AGUA POTABLE Y ALCANTARILLADO</h2>
            <ul class="list-detalles">
                <li>Levantamiento topográfico</li>
                <li>Seguridad Ocupacional</li>
                <li>Área Ambiental</li>
                <li>Mecánica de Suelos</li>
                <li>Enfermería</li>
                <li>Ingeniero Civil</li>
                <li>Planta de Tratamiento de Aguas Potable y Residuales</li>
                
            </ul> 
        </div>
    </article>
</section>
<style>
    .servicio-obras-agua-alcantarillado {
        width: 100%;
        height: 60vh;
        background-color: white;  
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        align-items: center;
        height: 100%;
    }
    .servicio-img {
        height: 380px; /* Altura fija para el contenedor de la imagen */
        overflow: hidden; /* Oculta cualquier parte de la imagen que sobresalga */
        border-radius: 0px 100px 100px 0px;
        box-shadow: 10px -10px 20px rgba(0, 0, 0, 0.3);
        background-color: rgba(0, 0, 0, 0.3);
    }

    .servicio-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .list-detalles{
        font-size: 1.4rem;
        font-family: "Noto Sans", sans-serif;
    }
    .servicio-detalles{
        padding-right: 60px;
    }
    .servicio-title{
        font-size: 2.4rem;
        font-weight: bold;
        margin: 0;
    }
</style>
