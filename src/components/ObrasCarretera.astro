---
import { Image } from "astro:assets";
import obracarretera from "../assets/obracarretera.webp";
---

<section class="servicio-obras-carretera">
    <article class="servicio-container">
        <div>
            <h2>Obras de carretera</h2>
            <ul class="servicio-detalles">
                <li>Levantamiento Topográfico</li>
                <li>Seguridad Ocupacional </li>
                <li>Área Ambiental</li>
                <li>Mecánica de Suelos</li>
                <li>Enfermería</li>
            </ul>
        </div>
        <div class="servicio-img">
            <Image
                src={obracarretera}
                alt="Electricista"
                class="servicio-image"
                width={1000}
                height={500}
            />
        </div>
    </article>
</section>
<style>
    .servicio-obras-carretera {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 30px 60px;
        gap: 30px;
    }
    .servicio-image {
        width: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .servicio-detalles{
        font-size: 1.8rem;
    }
</style>
