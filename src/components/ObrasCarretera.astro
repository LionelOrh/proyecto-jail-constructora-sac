<style>
    /* Variables locales coherentes */
    :root {
        --primary-blue: #293e49;
        --medium-blue: #0a71ac;
        --accent-blue: #20a6ff;
        --dark-blue: #083d63;
        --text-dark: #2c3e50;
        --text-light: #7f8c8d;
        --bg-light: #f8f9fa;
        --white: #ffffff;
        --font-primary: "Poppins", sans-serif;
        --font-secondary: "Noto Sans", sans-serif;
        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .carretera {
        width: 100%;
        height: 100%;
        padding: 2.5rem;
        background: var(--white);
        border-radius: 0;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
    }

    .carretera__container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        height: 100%;
        flex: 1;
        max-width: 100%;
        margin: 0 auto;
        box-sizing: border-box;
    }

    .carretera__content {
        padding: 0 1rem;
        order: 2;
        flex: 1;
        box-sizing: border-box;
    }

    .carretera__image-wrapper {
        position: relative;
        height: 200px;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: var(--shadow-soft);
        transition: var(--transition);
        order: 1;
        flex-shrink: 0;
        margin: 0 1rem;
    }

    .carretera__image-wrapper:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow-medium);
    }

    .carretera__image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(41, 62, 73, 0.3) 0%,
            rgba(10, 113, 172, 0.2) 100%
        );
        z-index: 1;
        opacity: 0;
        transition: var(--transition);
    }

    .carretera__image-wrapper:hover .carretera__image-overlay {
        opacity: 1;
    }

    .carretera__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .carretera__header {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .carretera__badge {
        display: inline-block;
        background: linear-gradient(135deg, var(--medium-blue) 0%, var(--accent-blue) 100%);
        color: var(--white);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-family: var(--font-primary);
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
        box-shadow: var(--shadow-soft);
    }

    .carretera__title {
        font-family: var(--font-primary);
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 700;
        color: var(--primary-blue);
        margin: 0 0 1rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .carretera__title-accent {
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--medium-blue) 0%, var(--accent-blue) 100%);
        border-radius: 2px;
        margin: 0 auto 1rem;
    }

    .carretera__services {
        display: flex;
        flex-direction: column;
        gap: 0.7rem;
        flex: 1;
    }

    .carretera__service-item {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem;
        background: var(--bg-light);
        border-radius: 12px;
        font-family: var(--font-secondary);
        font-size: 0.85rem;
        color: var(--text-dark);
        transition: var(--transition);
        border-left: 4px solid transparent;
    }

    .carretera__service-item:hover {
        background: var(--white);
        border-left-color: var(--medium-blue);
        transform: translateX(8px);
        box-shadow: var(--shadow-soft);
    }

    .carretera__service-icon {
        font-size: 1.2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, var(--medium-blue) 0%, var(--accent-blue) 100%);
        border-radius: 8px;
        flex-shrink: 0;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .carretera {
            padding: 1.5rem;
        }

        .carretera__container {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .carretera__content {
            order: 2;
        }

        .carretera__image-wrapper {
            height: 250px;
            order: 1;
        }

        .carretera__service-item {
            padding: 0.8rem;
        }
    }

    @media (max-width: 480px) {
        .carretera {
            padding: 1rem;
        }

        .carretera__image-wrapper {
            height: 200px;
        }

        .carretera__service-item {
            font-size: 0.85rem;
            padding: 0.7rem;
        }

        .carretera__service-icon {
            width: 32px;
            height: 32px;
            font-size: 1.1rem;
        }
    }
</style>
