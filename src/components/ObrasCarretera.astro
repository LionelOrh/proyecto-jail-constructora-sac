---
import { Image } from "astro:assets";
import obracarretera from "../assets/obracarretera.webp";
---

<section class="servicio-obras-carretera">
    <article class="servicio-container">
        <div class="servicio-detalles">
            <h2 class="servicio-title">OBRAS EN CARRETERA</h2>
            <ul class="list-detalles">
                <li>Levantamiento Topográfico</li>
                <li>Seguridad Ocupacional</li>
                <li>Área Ambiental</li>
                <li>Mecánica de Suelos</li>
                <li>Enfermería</li>
            </ul>
        </div>
        <div class="servicio-img">
            <Image
                src={obracarretera}
                alt="Obra de carretera"
                class="servicio-image"
                width={1000}
                height={380}
            />
        </div>
    </article>
</section>
<style>
    .servicio-obras-carretera {
        width: 100%;
        height: 60vh;
        background-color: white;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 30px;
        height: 100%;
    }
    .servicio-detalles {
        padding-left: 60px;
    }
    .servicio-img {
        height: 380px; /* Altura fija para el contenedor de la imagen */
        overflow: hidden; /* Oculta cualquier parte de la imagen que sobresalga */
        border-radius: 100px 0px 0px 100px;
    }
    .servicio-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .list-detalles {
        font-size: 1.5rem;
        font-family: "Noto Sans", sans-serif;
    }
    .servicio-title {
        font-size: 2.4rem;
        font-weight: bold;
        margin: 0;
    }
</style>
