---
import { Image } from "astro:assets";

import obraEdificacion from "../assets/obraedificacion.webp";
---

<section class="servicio-obras-edificacion">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={obraEdificacion}
                alt="Obras de edificación"
                class="servicio-image"
                width={1000}
                height={500}
            />
        </div>
        <div>
            <h2>Obras de Edificación</h2>
            <ul class="servicio-detalles">
                <li>Arquitectura</li>
                <li>Proveedor de Materiales</li>
                <li>Carpintero</li>
                <li>Gasfitería</li>
                <li>Electricistas</li>
                <li>Técnico de Impermeabilización</li>
                <li>Delineante (CAD)</li>
                <li>Ingeniero Civil</li>
                <li>Diseñador y decoración de Interiores</li>
                <li>Topografía</li>
            </ul>
        </div>
    </article>
</section>
<style>
    .servicio-obras-edificacion {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 30px 60px;
        gap: 30px;
    }
    .servicio-image {
        width: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .servicio-detalles{
        font-size: 1.8rem;
    }
</style>
