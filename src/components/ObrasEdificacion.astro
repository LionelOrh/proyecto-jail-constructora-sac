---
import { Image } from "astro:assets";

import obraEdificacion from "../assets/obraedificacion.webp";
---

<section class="servicio-obras-edificacion">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={obraEdificacion}
                alt="Obras de edificación"
                class="servicio-image"
                width={1000}
                height={400}
            />
        </div>
        <div class="servicio-detalles">
            <h2 class="servicio-title">OBRAS DE EDIFICACIÓN</h2>
            <ul class="list-detalles">
                <li>Arquitectura</li>
                <li>Proveedor de Materiales</li>
                <li>Carpintero</li>
                <li>Gasfitería</li>
                <li>Electricistas</li>
                <li>Técnico de Impermeabilización</li>
                <li>Delineante (CAD)</li>
                <li>Ingeniero Civil</li>
                <li>Diseñador y decoración de Interiores</li>
                <li>Topografía</li>
            </ul>
        </div>
    </article>
</section>
<style>
    .servicio-obras-edificacion {
        width: 100%;
        height: 60vh;
        background-color: white;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Dos columnas iguales */
        height: 100%;
        gap: 30px;
        align-items: center;
    }
    .servicio-img {
        height: 380px; /* Altura fija para el contenedor de la imagen */
        overflow: hidden; /* Oculta cualquier parte de la imagen que sobresalga */
        border-radius: 0px 100px 100px 0px;
    }

    .servicio-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .list-detalles {
        font-size: 1.2rem;
        font-family: "Noto Sans", sans-serif;
    }
    .servicio-detalles {
        padding-right: 60px;
    }
    .servicio-title {
        font-size: 2.4rem;
        font-weight: bold;
        margin: 0;
    }
</style>
