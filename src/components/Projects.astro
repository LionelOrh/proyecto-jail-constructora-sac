        height: 250px;
        overflow: hidden;
    }

    .project-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .project-card:hover .project-card__image {
        transform: scale(1.1);
    }

    .project-card__overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
