        --shadow-soft: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.12);
        --shadow-strong: 0 15px 50px rgba(0, 0, 0, 0.15);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        --gradient-primary: linear-gradient(135deg, var(--primary-blue) 0%, var(--dark-blue) 100%);
        --gradient-accent: linear-gradient(135deg, var(--medium-blue) 0%, var(--accent-blue) 100%);
    }

    /* Hero Section */
    .projects {
        width: 100%;
        box-sizing: border-box;
    }

    .projects__hero {
        position: relative;
        height: 80vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        box-sizing: border-box;
    }

    .projects__hero-image-wrapper {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .projects__hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .projects__hero-overlay {
        position: absolute;
        inset: 0;
                background: linear-gradient(135deg, rgba(11, 81, 129, 0.8), rgba(8, 61, 99, 0.9));

        z-index: 1;
    }

    .projects__hero-content {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        color: var(--white);
        animation: fadeInUp 1s ease-out;
        box-sizing: border-box;
    }

    .projects__hero-badge {
        display: inline-block;
        background: var(--gradient-accent);
        color: var(--white);
        padding: 0.5rem 1.5rem;
        border-radius: 25px;
        font-family: var(--font-primary);
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow-soft);
    }

    .projects__hero-title {
        font-family: "Poppins", sans-serif;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin: 0 0 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
        
    }

    .projects__hero-description {
        font-family: "Poppins", sans-serif;
        font-size: clamp(1.1rem, 2vw, 1.3rem);
        line-height: 1.6;
        max-width: 800px;
        margin: 0;
        opacity: 0.95;
    }

    /* Container Principal */
    .projects__container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 5rem 2rem;
        box-sizing: border-box;
    }

    .projects__header {
        text-align: center;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .projects__main-title {
        font-family: var(--font-primary);
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 700;
        color: var(--primary-blue);
        margin: 0 0 1rem;
        line-height: 1.2;
        letter-spacing: -0.02em;
    }

    .projects__title-accent {
        width: 100px;
        height: 4px;
        background: var(--gradient-accent);
        margin: 0 auto;
        border-radius: 2px;
    }

    /* Company Sections */
    .projects__company-section {
        margin-bottom: 5rem;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .projects__company-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 3rem;
        padding: 2rem;
        background: var(--gradient-primary);
        border-radius: 20px;
        box-shadow: var(--shadow-medium);
        transition: var(--transition);
        box-sizing: border-box;
    }

    .projects__company-header:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-strong);
    }

    .projects__company-icon {
        display: flex;
        align-items: center;
        justify-content: center;
