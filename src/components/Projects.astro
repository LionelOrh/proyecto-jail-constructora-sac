        transition: var(--transition);
    }

    .project-card:hover .project-card__overlay {
        opacity: 1;
    }

    .project-card__category {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 0.5rem 1rem;
        border-radius: 15px;
