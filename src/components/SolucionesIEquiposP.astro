---
import { Image } from "astro:assets";
import equiposPesados from "../assets/equipospesados.webp";
---

<section class="servicio-soluciones-integrales">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={equiposPesados}
                alt="Electricista"
                class="servicio-image"
                width={1000}
                height={500}
            />
        </div>
        <div>
            <h2 class="servicio-title">Soluciones integrales de equipos pesados</h2>
            <ul class="servicio-detalles">
                <li>Mantenimiento Preventivo y Correctivo</li>
                <li>Fabricación y Mecanizado de Piezas</li>
                <li>Movimientos de Tierra</li>
                <li>Metalmecánica</li>
                <li>Alquiler de Maquinaria Pesada y Vehículos</li>
            </ul>
        </div>
    </article>
</section>
<style>
    .servicio-soluciones-integrales {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        padding: 30px 60px;
        gap: 30px;
    }
    .servicio-image {
        width: 100%;
        object-fit: cover;
        border-radius: 20px;
    }
    .servicio-detalles{
        font-size: 1.8rem;
    }
    .servicio-title{
    }
</style>
