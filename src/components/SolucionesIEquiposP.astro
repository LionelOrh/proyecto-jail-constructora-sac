---
import { Image } from "astro:assets";
import equiposPesados from "../assets/equipospesados.webp";
---

<section class="servicio-soluciones-integrales">
    <article class="servicio-container">
        <div class="servicio-img">
            <Image
                src={equiposPesados}
                alt="Electricista"
                class="servicio-image"
                width={1000}
                height={400}
            />
        </div>
        <div class="service-detalles">
            <h2 class="servicio-title">
                SOLUCIONES INTEGRALES DE EQUIPOS PESADOS
            </h2>
            <ul class="list-detalles">
                <li>Mantenimiento Preventivo y Correctivo</li>
                <li>Fabricación y Mecanizado de Piezas</li>
                <li>Movimientos de Tierra</li>
                <li>Metalmecánica</li>
                <li>Alquiler de Maquinaria Pesada y Vehículos</li>
            </ul>
        </div>
    </article>
</section>
<style>
    .servicio-soluciones-integrales {
        height: 60vh;
        width: 100%;
        background-color: white;
    }
    .servicio-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        height: 100%;
        align-items: center;
    }
    .servicio-img {
        height: 380px; /* Altura fija para el contenedor de la imagen */
        overflow: hidden; /* Oculta cualquier parte de la imagen que sobresalga */
        border-radius: 0px 100px 100px 0px;
        box-shadow: 10px -10px 20px rgba(0, 0, 0, 0.3);
        background-color: rgba(0, 0, 0, 0.3);
    }

    .servicio-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .list-detalles {
        font-size: 1.6rem;
        font-family: "Noto Sans", sans-serif;
    }
    .servicio-title {
        font-size: 2.4rem;
        font-weight: bold;
        margin: 0;
    }
    .service-detalles {
        padding-right: 60px;
    }
</style>
